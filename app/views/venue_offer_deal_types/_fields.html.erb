
<%# locals: (form:) %>
<div class="venue-buildings-fields nested-fields my-3 col col-md-4 align-items-end" data-new-record="<%= form.object.new_record? %>">
  <div class="row">
    <%= form.hidden_field :_destroy %>
    <%= form.hidden_field :venue_offer_id, value: form.object.venue_offer_id %>

    <%= form.fields_for :deal_type do |deal_type_form| %>
      <div class="col-md-12">
        <%= deal_type_form.label :id, t('activerecord.attributes.venue_offer_deal_type.deal_type') %>
        <%= deal_type_form.collection_select :id, DealType.all, :id, :name, { prompt: t('helpers.select.prompt') }, class: 'form-control' %>
      </div>
    <% end %>

    <div class="col-8 col-md-10 mt-3 mt-md-0">
      <%= link_to '#', class: 'btn btn-outline-danger btn-sm', data: { action: 'click->better_together--dynamic-fields#remove' } do %>
        <i class="fas fa-minus"></i> <%= t('better_together.remove') %>
      <% end %>
    </div>
  </div>
</div>
