<div class="container mt-4">
  <header class="mb-4 text-center">
    <h2 class="fw-bold">Editing Ticket Sale Option: <%= @ticket_sale_option.name %></h2>
  </header>

  <section class="mb-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title"><i class="fas fa-edit text-primary"></i> Edit Ticket Sale Option</h3>
        <%= render "form", ticket_sale_option: @ticket_sale_option %>
      </div>
    </div>
  </section>

  <div class="btn-toolbar justify-content-center" role="toolbar">
    <div class="btn-group me-2" role="group">
      <%= link_to "Show this ticket sale option", @ticket_sale_option, class: "btn btn-info btn-sm" %>
    </div>
    <div class="btn-group" role="group">
      <%= link_to "Back to ticket sale options", ticket_sale_options_path, class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
</div>
