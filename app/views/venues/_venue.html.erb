<div id="<%= dom_id(venue) %>" class="col venue-column mb-3 <%= dom_class(venue) %>">
  <div class="card venue h-100 shadow-sm border-0">
    <% if venue.primary_image.media.attached? %>
      <%= image_tag venue.primary_image.url, class: "card-img-top", alt: "#{venue.primary_image.alt_text}" %>
    <% end %>
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <h5 class="card-title mb-1">
          <% if policy(venue).show? %>
            <%= link_to venue.name, venue, class: 'text-decoration-none' %>
          <% else %>
            <%= venue.name %>
          <% end %>
        </h5>
        <% if venue.primary_address %>
          <p class="venue-address card-text text-muted">
            <i class="fas fa-map-marker-alt"></i> <%= venue.primary_address.to_formatted_s(format: :short) %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="card-footer">
      <%= render_quick_fact_icons(venue) %>
    </div>
  </div>
</div>
