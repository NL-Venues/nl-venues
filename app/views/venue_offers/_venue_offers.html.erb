
<%# locals: (form: nil) %>

<div class="venue-offers mb-4" data-controller="better_together--dynamic-fields">
  <h3><%= VenueOffer.name.humanize.pluralize %></h3>

  <div id="<%= dom_id(form.object, :venue_offers) %>" class="mb-3" data-better_together--dynamic-fields-target="container">
    <%= form.fields_for :venue_offers do |venue_offer_form| %>
      <%= render 'venue_offers/fields', form: venue_offer_form %>
    <% end %>
  </div>

  <!-- Hidden template -->
  <template data-better_together--dynamic-fields-target="template">
    <%# Build a new PhoneNumber instance %>
    <%= form.fields_for :venue_offers, form.object.venue_offers.build, child_index: 'NEW_RECORD' do |venue_offer_form| %>
      <%= render 'venue_offers/fields', form: venue_offer_form %>
    <% end %>
  </template>

  <%= link_to '#', class: 'btn btn-outline-primary btn-sm', data: { action: 'click->better_together--dynamic-fields#add' } do %>
    <i class="fas fa-plus"></i> <%= t('better_together.global.add') %>
  <% end %>
</div>
