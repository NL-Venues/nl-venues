
<%# locals: (form:) %>
<div class="venue-buildings-fields nested-fields my-3 row align-items-end" data-new-record="<%= form.object.new_record? %>">
  <h4><%= VenueOffer.name.humanize %></h4>
  <%= form.hidden_field :_destroy %>
  <%= form.hidden_field :venue_id, value: form.object.venue_id %>

  <div class="col-md-12 mb-3">
    <%= form.label :deal_type_ids, t('activerecord.attributes.venue_offer_deal_type.deal_type'), class: 'me-3' %>
    <% DealType.all.each do |deal_type| %>
      <div class="form-check form-check-inline">
        <%= form.check_box :deal_type_ids, { multiple: true, class: 'form-check-input' }, deal_type.id, nil %>
        <%= form.label :deal_type_ids, deal_type.name, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div class="col-md-12 mb-3">
    <%= form.label :ticket_sale_option_ids, t('activerecord.attributes.venue_offer_ticket_sale_option.ticket_sale_option'), class: 'me-3' %>
    <% TicketSaleOption.all.each do |option| %>
      <div class="form-check form-check-inline">
        <%= form.check_box :ticket_sale_option_ids, { multiple: true, class: 'form-check-input' }, option.id, nil %>
        <%= form.label :ticket_sale_option_ids, option.name, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div class="col-md-12 mb-3">
    <%= form.label :accomodations_notes %>
    <%= form.text_area :accomodations_notes, class: 'form-control' %>
  </div>

  <div class="col-md-12 mb-3">
    <%= form.label :financial_notes %>
    <%= form.text_area :financial_notes, class: 'form-control' %>
  </div>

  <div class="col-md-12 mb-3">
    <%= form.label :marketing_support %>
    <%= form.text_area :marketing_support, class: 'form-control' %>
  </div>

  <div class="col-4 col-md-2">
    <%= render partial: 'better_together/shared/fields/primary_flag', locals: { form:, primary_flag_scope: form.object.venue_id } %>
  </div>

  <div class="col-8 col-md-10 mt-3 mt-md-0">
    <%= link_to '#remove-venue-offer', class: 'btn btn-outline-danger btn-sm', data: { action: 'click->better_together--dynamic-fields#remove' } do %>
      <i class="fas fa-minus"></i> <%= t('better_together.remove') %>
    <% end %>
  </div>
</div>
