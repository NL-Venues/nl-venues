<% content_for :page_title do %>
  <%= resource_class.model_name.human.pluralize %>
<% end %>

<div class="tours container mt-5">
  <h1 class="mb-4">Tours</h1>

  <% if policy(resource_class).create? %>
    <div class="row">
      <div class="col-12 mb-4 text-right">
        <a href="<%= new_tour_path %>" class="btn btn-success">Add New Tour</a>
      </div>
    </div>
    <h2>Draft</h2>
    <div class="row">
      <%= render(@draft_tours) || render('none') %>
    </div>
  <% end %>

  <% if @upcoming_tours.any? || @past_tours.any? %>
    <h2>Upcoming</h2>
    <div class="row">
      <%= render(@upcoming_tours) || render('none') %>
    </div>

    <% if @past_tours.any? %>
      <h2>Past</h2>
      <div class="row">
        <%= render(@past_tours) %>
      </div>
    <% end %>
  <% else %>
    <div class="row">
      <div class="col">
        <div class="card text-center">
          <div class="card-body">
            <h3 class="card-title">No tours yet!</h3>
            <p class="card-text">
                No tours are currently scheduled.<br>
                Plan a tour to bring your performances to new venues and audiences!<br>
                Touring is a great way to share your talent, connect with fans, and grow your presence.
            </p>
            <% if policy(resource_class).create? %>
              <a href="<%= new_tour_path %>" class="btn btn-primary mt-3">Plan a Tour</a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
